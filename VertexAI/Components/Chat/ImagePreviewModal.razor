@* 图片预览模态框组件 *@
@inject IJSRuntime JS

@if (IsOpen)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black/85 backdrop-blur-sm animate-fadeIn"
         @onclick="Close">
        <div class="relative max-w-[95vw] max-h-[90vh] animate-zoomIn" @onclick:stopPropagation>
            @* 图片容器 - 支持缩放 *@
            <div class="relative">
                <img src="@ImageUrl"
                     alt="预览图片"
                     class="max-w-full max-h-[85vh] object-contain rounded-lg shadow-2xl select-none"
                     style="touch-action: pinch-zoom;" />

                @* 移动端提示 *@
                <div class="absolute bottom-4 left-1/2 -translate-x-1/2 sm:hidden bg-black/60 text-white/80 text-xs px-3 py-1.5 rounded-full">
                    双指缩放查看
                </div>
            </div>

            @* 关闭按钮 *@
            <button type="button"
                    @onclick="Close"
                    class="absolute -top-3 -right-3 w-11 h-11 bg-white/95 hover:bg-white text-slate-700 rounded-full shadow-lg flex items-center justify-center transition-all hover:scale-110 active:scale-95">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </button>
        </div>
    </div>
}

<style>
    .animate-fadeIn {
        animation: fadeIn 0.2s ease-out;
    }
    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    .animate-zoomIn {
        animation: zoomIn 0.25s cubic-bezier(0.34, 1.56, 0.64, 1);
    }
    @@keyframes zoomIn {
        from {
            opacity: 0;
            transform: scale(0.9);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }
</style>

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public string ImageUrl { get; set; } = "";
    [Parameter] public EventCallback OnClose { get; set; }

    private bool _previousIsOpen;

    private async Task Close()
    {
        await OnClose.InvokeAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        // 只在 IsOpen 状态变化时操作 body.overflow
        if (IsOpen != _previousIsOpen)
        {
            _previousIsOpen = IsOpen;
            try
            {
                if (IsOpen)
                {
                    await JS.InvokeVoidAsync("eval", "document.body.style.overflow = 'hidden'");
                }
                else
                {
                    await JS.InvokeVoidAsync("eval", "document.body.style.overflow = ''");
                }
            }
            catch { /* 忽略 JS 调用失败 */ }
        }
    }
}

