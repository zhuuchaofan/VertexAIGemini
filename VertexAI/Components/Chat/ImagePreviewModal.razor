@* 图片预览模态框组件 *@
@inject IJSRuntime JS

@if (IsOpen)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black/80 backdrop-blur-sm animate-fadeIn"
         @onclick="Close">
        <div class="relative max-w-[90vw] max-h-[90vh]" @onclick:stopPropagation>
            <img src="@ImageUrl"
                 alt="预览图片"
                 class="max-w-full max-h-[90vh] object-contain rounded-lg shadow-2xl" />

            @* 关闭按钮 *@
            <button type="button"
                    @onclick="Close"
                    class="absolute -top-3 -right-3 w-10 h-10 bg-white/90 hover:bg-white text-slate-700 rounded-full shadow-lg flex items-center justify-center transition-all hover:scale-110">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </button>
        </div>
    </div>
}

<style>
    .animate-fadeIn {
        animation: fadeIn 0.2s ease-out;
    }
    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
</style>

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public string ImageUrl { get; set; } = "";
    [Parameter] public EventCallback OnClose { get; set; }

    private async Task Close()
    {
        await OnClose.InvokeAsync();
    }

    protected override async Task OnParametersSetAsync()
    {
        // 当模态框打开时，禁止页面滚动
        if (IsOpen)
        {
            await JS.InvokeVoidAsync("eval", "document.body.style.overflow = 'hidden'");
        }
        else
        {
            await JS.InvokeVoidAsync("eval", "document.body.style.overflow = ''");
        }
    }
}
