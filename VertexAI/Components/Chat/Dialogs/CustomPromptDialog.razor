@* 自定义提示词对话框 *@

@if (IsOpen)
{
    <div class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4" @onclick="OnClose">
        <div class="bg-white rounded-2xl shadow-2xl w-full max-w-lg" @onclick:stopPropagation>
            <div class="px-6 py-4 border-b border-amber-200">
                <h2 class="text-lg font-bold text-gray-800">自定义系统提示词</h2>
            </div>
            <div class="p-6">
                <textarea @bind="PromptValue" @bind:event="oninput" rows="6" placeholder="输入自定义的 AI 人设提示词..."
                          class="w-full bg-amber-50 border border-amber-300 rounded-xl px-4 py-3 text-gray-800 focus:outline-none focus:ring-2 focus:ring-amber-400 resize-none"></textarea>
            </div>
            <div class="px-6 py-4 border-t border-amber-200 flex justify-end gap-3">
                <button @onclick="OnClose" class="px-4 py-2 text-gray-600 hover:bg-gray-100 rounded-lg">取消</button>
                <button @onclick="Apply" disabled="@string.IsNullOrWhiteSpace(PromptValue)"
                        class="px-4 py-2 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-medium rounded-lg disabled:opacity-50">
                    应用
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsOpen { get; set; }
    [Parameter] public string PromptValue { get; set; } = "";
    [Parameter] public EventCallback<string> PromptValueChanged { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback<string> OnApply { get; set; }

    private async Task Apply()
    {
        if (!string.IsNullOrWhiteSpace(PromptValue))
        {
            await OnApply.InvokeAsync(PromptValue);
        }
    }
}
