@* 聊天输入区域组件 *@
@inject IJSRuntime JS
@implements IDisposable

<footer class="flex-shrink-0 bg-white/70 backdrop-blur-xl border-t border-slate-100 px-2 sm:px-3 py-3 sm:py-4 safe-area-bottom">
    <div class="max-w-4xl mx-auto">
        @* 图片预览区域 *@
        <ImagePreview Images="PendingImages" OnRemove="HandleRemoveImage" />

        <div class="flex gap-2 items-center">
            @* 上传按钮 *@
            <InputFile @ref="_fileInput"
                       OnChange="HandleFileSelected"
                       Accept="image/jpeg,image/png,image/webp,image/gif"
                       multiple
                       class="hidden" />
            <button type="button"
                    @onclick="TriggerFileInput"
                    disabled="@IsLoading"
                    title="上传图片"
                    class="h-12 w-12 bg-slate-100 hover:bg-slate-200 text-slate-600 rounded-2xl disabled:opacity-50 disabled:cursor-not-allowed transition-all flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
            </button>

            <div class="flex-1 min-w-0">
                <textarea @ref="_textareaRef"
                          @bind="BoundValue"
                          @bind:event="oninput"
                          rows="1"
                          placeholder="输入消息... (Enter 发送, Shift+Enter 换行)"
                          disabled="@IsLoading"
                          class="w-full bg-slate-50 border border-slate-200 rounded-2xl px-4 py-3 text-slate-700 text-sm sm:text-base focus:outline-none focus:ring-2 focus:ring-sky-300 focus:border-sky-300 resize-none min-h-[48px] max-h-[200px] transition-all shadow-sm"
                          style="field-sizing: content;" />
            </div>
            <button type="button" @onclick="OnSend" disabled="@(CannotSend || IsLoading)"
                    class="h-12 px-4 sm:px-5 bg-gradient-to-r from-sky-400 to-emerald-400 text-white font-medium rounded-2xl disabled:opacity-50 disabled:cursor-not-allowed hover:shadow-lg hover:shadow-sky-200/50 hover:scale-105 active:scale-95 transition-all flex items-center justify-center gap-2 flex-shrink-0 shadow-md">
                @if (IsLoading)
                {
                    <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                }
                else
                {
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                    </svg>
                }
                <span class="hidden sm:inline">发送</span>
            </button>
        </div>

        @* 错误提示 *@
        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <p class="text-xs text-red-500 mt-2 ml-1">@_errorMessage</p>
        }
        @* 字符计数提示 *@
        else if (CharCount > 3000)
        {
            <p class="text-xs mt-2 ml-1 @(CharCount > 4000 ? "text-red-500" : "text-amber-500")">
                @(CharCount > 4000 ? "消息过长，建议精简内容" : $"已输入 {CharCount:N0} 字符")
            </p>
        }
    </div>
</footer>

@code {
    [Parameter] public string InputValue { get; set; } = "";
    [Parameter] public EventCallback<string> InputValueChanged { get; set; }
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public EventCallback OnSendMessage { get; set; }

    /// <summary>
    /// 待发送的图片列表
    /// </summary>
    [Parameter] public List<ImageAttachment> PendingImages { get; set; } = new();
    [Parameter] public EventCallback<List<ImageAttachment>> PendingImagesChanged { get; set; }

    /// <summary>
    /// 图片选择事件（由父组件处理验证和转换）
    /// </summary>
    [Parameter] public EventCallback<InputFileChangeEventArgs> OnFilesSelected { get; set; }

    private ElementReference _textareaRef;
    private InputFile? _fileInput;
    private DotNetObjectReference<ChatInput>? _dotnetRef;
    private string? _errorMessage;

    private int CharCount => InputValue?.Length ?? 0;
    private bool CannotSend => string.IsNullOrWhiteSpace(InputValue) && PendingImages.Count == 0;

    private string BoundValue
    {
        get => InputValue;
        set => InputValueChanged.InvokeAsync(value);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _dotnetRef = DotNetObjectReference.Create(this);
            await JS.InvokeVoidAsync("chatInputHandler.init", _textareaRef, _dotnetRef);
        }
    }

    private async Task TriggerFileInput()
    {
        // 通过 JS 触发隐藏的 InputFile
        await JS.InvokeVoidAsync("eval", "document.querySelector('input[type=file]').click()");
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        _errorMessage = null;
        await OnFilesSelected.InvokeAsync(e);
    }

    private async Task HandleRemoveImage(ImageAttachment image)
    {
        var images = PendingImages.ToList();
        images.Remove(image);
        await PendingImagesChanged.InvokeAsync(images);
    }

    /// <summary>
    /// 设置错误消息（供父组件调用）
    /// </summary>
    public void SetError(string message)
    {
        _errorMessage = message;
        StateHasChanged();
    }

    /// <summary>
    /// 清除错误消息
    /// </summary>
    public void ClearError()
    {
        _errorMessage = null;
        StateHasChanged();
    }

    /// <summary>
    /// 供 JS 调用的发送方法
    /// </summary>
    [JSInvokable]
    public async Task SendMessage() => await OnSend();

    private async Task OnSend()
    {
        if (!CannotSend && !IsLoading)
        {
            await OnSendMessage.InvokeAsync();
        }
    }

    public void Dispose()
    {
        _dotnetRef?.Dispose();
    }
}


