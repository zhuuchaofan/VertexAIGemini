@* 顶部栏组件 - 预设/思考选择器 *@
@using Google.GenAI.Types
@inject IJSRuntime JS

<header class="flex-shrink-0 bg-gradient-to-r from-sky-400 to-emerald-400 px-2 sm:px-4 py-2 sm:py-3 shadow-lg safe-area-top">
    <div class="flex items-center justify-between gap-1 sm:gap-2">
        <div class="flex items-center gap-1 sm:gap-2 min-w-0 flex-1">
            <button @onclick="OnToggleSidebar" class="p-1.5 text-white/90 hover:text-white hover:bg-white/20 rounded-lg transition-all flex-shrink-0">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                </svg>
            </button>
            <h1 class="text-base sm:text-lg font-bold text-white flex-shrink-0 hidden sm:block">Gemini</h1>

            @* 预设选择器 *@
            <div class="relative flex-shrink-0">
                <button @onclick="TogglePresetMenu"
                        class="flex items-center gap-1 px-2.5 py-1.5 bg-white/20 hover:bg-white/30 rounded-xl text-white text-xs font-medium transition-all">
                    <span class="truncate max-w-[60px] sm:max-w-[80px]">@CurrentPresetName</span>
                    <svg class="w-3 h-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/></svg>
                </button>
                @if (_showPresetMenu)
                {
                    <div class="absolute top-full left-0 mt-2 w-56 bg-white/95 backdrop-blur-xl rounded-2xl shadow-2xl border border-slate-100 z-50 max-h-[60vh] overflow-y-auto">
                        @foreach (var preset in Presets.Where(p => p.Id != "custom"))
                        {
                            <button @onclick="() => SelectPreset(preset.Id)"
                                    class="w-full flex items-center gap-3 px-4 py-3 hover:bg-slate-50 text-left transition-colors @(CurrentPresetId == preset.Id ? "bg-sky-50" : "")">
                                <div class="flex-1 min-w-0">
                                    <div class="font-medium text-slate-700">@preset.Name</div>
                                    <div class="text-xs text-slate-400 truncate">@preset.Description</div>
                                </div>
                            </button>
                        }
                        <hr class="border-slate-100" />
                        <button @onclick="OnShowCustomPrompt"
                                class="w-full flex items-center gap-3 px-4 py-3 hover:bg-slate-50 text-left transition-colors">
                            <div class="flex-1">
                                <div class="font-medium text-slate-700">自定义提示词</div>
                            </div>
                        </button>
                    </div>
                }
            </div>

            @* 思考模式选择器 *@
            <div class="relative flex-shrink-0">
                <button @onclick="ToggleThinkingMenu"
                        class="flex items-center gap-1 px-2.5 py-1.5 bg-white/20 hover:bg-white/30 rounded-xl text-white text-xs font-medium transition-all">
                    <span class="truncate max-w-[50px] sm:max-w-[60px]">@GetThinkingLevelName()</span>
                    <svg class="w-3 h-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/></svg>
                </button>
                @if (_showThinkingMenu)
                {
                    <div class="absolute top-full left-0 mt-2 w-36 bg-white/95 backdrop-blur-xl rounded-2xl shadow-2xl border border-slate-100 z-50">
                        @foreach (var level in ThinkingLevels)
                        {
                            <button @onclick="() => SelectThinkingLevel(level.Value)"
                                    class="w-full px-4 py-2.5 text-left hover:bg-slate-50 text-sm transition-colors @(CurrentThinkingLevel == level.Value ? "bg-sky-50 text-sky-600 font-medium" : "text-slate-600")">
                                @level.Name
                            </button>
                        }
                    </div>
                }
            </div>
        </div>

        <div class="flex items-center gap-1 sm:gap-2 flex-shrink-0">
            @* Token 统计 - 移动端紧凑显示 *@
            <span class="text-xs text-white/80 font-mono hidden sm:inline">@FormatTokenCount(TokenCount)/@FormatTokenCount(MaxTokens)</span>
            <span class="text-xs text-white/80 font-mono sm:hidden" title="@TokenCount/@MaxTokens">@FormatTokenCount(TokenCount)</span>
            <button @onclick="OnNewChat" class="p-1.5 sm:px-3 sm:py-1.5 text-white/90 hover:text-white hover:bg-white/20 rounded-xl flex items-center gap-1.5 transition-all" title="新对话">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                </svg>
                <span class="hidden sm:inline text-xs font-medium">新对话</span>
            </button>
        </div>
    </div>
</header>

@if (!EmailVerified && !_dismissedVerifyBanner)
{
    <div class="flex-shrink-0 bg-amber-50 border-b border-amber-200 px-3 py-2 flex items-center justify-between gap-2 text-xs text-amber-700">
        <div class="flex items-center gap-1.5">
            <svg class="w-3.5 h-3.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z"/>
            </svg>
            <span>@(_resendMessage ?? "您的邮箱尚未验证")</span>
            @if (!_resendingEmail)
            {
                <button @onclick="ResendVerification" class="ml-1 underline hover:text-amber-900 font-medium transition-colors">重新发送</button>
            }
            else
            {
                <span class="ml-1 text-amber-500">发送中...</span>
            }
        </div>
        <button @onclick="() => _dismissedVerifyBanner = true" class="p-0.5 hover:bg-amber-200/50 rounded transition-colors">
            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>
    </div>
}


@code {
    [Parameter] public string CurrentPresetId { get; set; } = "default";
    [Parameter] public string CurrentPresetName { get; set; } = "默认助手";
    [Parameter] public List<PresetItem> Presets { get; set; } = [];
    [Parameter] public ThinkingLevel CurrentThinkingLevel { get; set; }
    [Parameter] public int TokenCount { get; set; }
    [Parameter] public int MaxTokens { get; set; }
    [Parameter] public bool EmailVerified { get; set; }
    [Parameter] public EventCallback OnToggleSidebar { get; set; }
    [Parameter] public EventCallback<string> OnSelectPreset { get; set; }
    [Parameter] public EventCallback OnShowCustomPrompt { get; set; }
    [Parameter] public EventCallback<ThinkingLevel> OnSelectThinkingLevel { get; set; }
    [Parameter] public EventCallback OnNewChat { get; set; }

    private bool _showPresetMenu;
    private bool _showThinkingMenu;
    private bool _dismissedVerifyBanner;
    private bool _resendingEmail;
    private string? _resendMessage;

    private static readonly (string Name, ThinkingLevel Value)[] ThinkingLevels =
    [
        ("关闭思考", ThinkingLevel.THINKING_LEVEL_UNSPECIFIED),
        ("低级思考", ThinkingLevel.LOW),
        ("中级思考", ThinkingLevel.MEDIUM),
        ("高级思考", ThinkingLevel.HIGH)
    ];

    private void TogglePresetMenu() { _showPresetMenu = !_showPresetMenu; _showThinkingMenu = false; }
    private void ToggleThinkingMenu() { _showThinkingMenu = !_showThinkingMenu; _showPresetMenu = false; }

    private void SelectPreset(string presetId)
    {
        OnSelectPreset.InvokeAsync(presetId);
        _showPresetMenu = false;
    }

    private void SelectThinkingLevel(ThinkingLevel level)
    {
        OnSelectThinkingLevel.InvokeAsync(level);
        _showThinkingMenu = false;
    }

    private string GetThinkingLevelName() => ThinkingLevels.FirstOrDefault(l => l.Value == CurrentThinkingLevel).Name ?? "中级思考";
    private static string FormatTokenCount(int count) => count >= 1000 ? $"{count / 1000}K" : count.ToString();

    public void CloseMenus() { _showPresetMenu = false; _showThinkingMenu = false; }

    private record ResendResult(bool Success, string? Error);

    private async Task ResendVerification()
    {
        _resendingEmail = true;
        _resendMessage = null;
        StateHasChanged();

        try
        {
            var result = await JS.InvokeAsync<ResendResult>(
                "simpleFetch", "/api/auth/resend-verification", new { });
            _resendMessage = result?.Success == true ? "验证邮件已发送，请查收" : (result?.Error ?? "发送失败");
        }
        catch
        {
            _resendMessage = "网络错误，请稍后重试";
        }

        _resendingEmail = false;
        StateHasChanged();
    }
}

