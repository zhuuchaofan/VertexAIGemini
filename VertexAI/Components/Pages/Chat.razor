@page "/"
@rendermode InteractiveServer
@inject GeminiService Gemini
@inject IJSRuntime JS

<div class="h-dvh flex flex-col">
    <header class="flex-shrink-0 bg-gradient-to-r from-amber-500 to-orange-500 px-4 sm:px-6 py-3 sm:py-4 shadow-md safe-area-top">
        <div class="max-w-4xl mx-auto flex items-center justify-between gap-2 sm:gap-4">
            <div class="flex items-center gap-2 sm:gap-3 min-w-0">
                <h1 class="text-lg sm:text-xl font-bold text-white whitespace-nowrap">Gemini</h1>
                
                @* 系统提示词选择器 *@
                <div class="relative">
                    <button @onclick="TogglePresetMenu" 
                            class="flex items-center gap-1 sm:gap-2 px-2 sm:px-3 py-1.5 bg-white/20 hover:bg-white/30 active:bg-white/40 rounded-lg text-white text-xs sm:text-sm transition-colors">
                        <span class="truncate max-w-[80px] sm:max-w-none">@GetCurrentPresetName()</span>
                        <svg class="w-3 h-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/></svg>
                    </button>
                    
                    @if (_showPresetMenu)
                    {
                        <div class="absolute top-full left-0 mt-2 w-56 sm:w-64 bg-white rounded-xl shadow-xl border border-amber-200 z-50 overflow-hidden">
                            @foreach (var preset in GeminiService.Presets)
                            {
                                @if (preset.Id != "custom")
                                {
                                    <button @onclick="() => SelectPreset(preset.Id)"
                                            class="w-full flex items-center gap-3 px-4 py-3 hover:bg-amber-50 active:bg-amber-100 transition-colors text-left @(Gemini.CurrentPresetId == preset.Id ? "bg-amber-100" : "")">
                                        <div class="flex-1 min-w-0">
                                            <div class="font-medium text-gray-800">@preset.Name</div>
                                            <div class="text-xs text-gray-500 truncate">@preset.Description</div>
                                        </div>
                                        @if (Gemini.CurrentPresetId == preset.Id)
                                        {
                                            <svg class="w-4 h-4 text-amber-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                        }
                                    </button>
                                }
                            }
                            <hr class="border-amber-200" />
                            <button @onclick="ShowCustomPromptDialog"
                                    class="w-full flex items-center gap-3 px-4 py-3 hover:bg-amber-50 active:bg-amber-100 transition-colors text-left @(Gemini.CurrentPresetId == "custom" ? "bg-amber-100" : "")">
                                <div class="flex-1">
                                    <div class="font-medium text-gray-800">自定义提示词</div>
                                    <div class="text-xs text-gray-500">输入自定义人设</div>
                                </div>
                            </button>
                        </div>
                    }
                </div>
            </div>
            
            <div class="flex items-center gap-2 sm:gap-4 flex-shrink-0">
                @* Token 使用量显示 *@
                <div class="text-xs sm:text-sm text-white/80 flex items-center gap-1 sm:gap-2">
                    <span class="hidden sm:inline">Token:</span>
                    <span class="font-mono">@FormatTokenCount(Gemini.CurrentTokenCount)</span>
                    <span class="text-white/50">/</span>
                    <span class="font-mono text-white/60">@FormatTokenCount(Gemini.MaxTokens)</span>
                    @if (Gemini.HasSummary)
                    {
                        <span class="ml-1 px-1 py-0.5 bg-white/20 rounded text-xs" title="历史已摘要压缩">[S]</span>
                    }
                </div>
                <button @onclick="ClearChat" 
                        class="px-2 sm:px-3 py-1.5 text-xs sm:text-sm text-white/80 hover:text-white hover:bg-white/10 active:bg-white/20 rounded-lg transition-colors">
                    清空
                </button>
            </div>
        </div>
    </header>

    <main class="flex-1 overflow-y-auto px-3 sm:px-4 py-4 sm:py-6 bg-amber-50" id="messages-container" @onclick="CloseMenus">
        <div class="max-w-4xl mx-auto space-y-4 sm:space-y-6">
            @if (_messages.Count == 0)
            {
                <div class="text-center py-16 sm:py-20">
                    <p class="text-amber-700 font-medium text-base sm:text-lg">@GetCurrentPresetName()</p>
                    <p class="text-sm text-amber-500 mt-2">开始对话吧</p>
                </div>
            }

            @if (_trimNotification != null)
            {
                <div class="bg-amber-100 border border-amber-300 rounded-lg px-3 sm:px-4 py-2 text-xs sm:text-sm text-amber-700 flex items-center gap-2">
                    <span>[Info]</span>
                    <span class="flex-1">@_trimNotification</span>
                    <button @onclick="() => _trimNotification = null" class="text-amber-500 hover:text-amber-700 px-1">x</button>
                </div>
            }

            @foreach (var msg in _messages)
            {
                <div class="@(msg.IsUser ? "flex justify-end" : "flex justify-start")">
                    <div class="max-w-[90%] sm:max-w-[85%] @(msg.IsUser ? "bg-gradient-to-r from-amber-500 to-orange-500 text-white rounded-2xl rounded-br-md" : "bg-white border border-amber-200 text-gray-800 rounded-2xl rounded-bl-md shadow-sm") px-3 sm:px-4 py-2 sm:py-3">
                        
                        @if (!msg.IsUser && msg.ThinkingContent?.Length > 0)
                        {
                            <details class="mb-2 sm:mb-3 group">
                                <summary class="cursor-pointer text-xs sm:text-sm text-amber-700 flex items-center gap-2 hover:text-amber-900 transition-colors">
                                    <span>思考过程</span>
                                    <span class="text-xs text-amber-500">(@msg.ThinkingContent.Length 字符)</span>
                                </summary>
                                <div class="mt-2 pl-3 sm:pl-4 text-xs sm:text-sm text-amber-800 border-l-2 border-amber-300 whitespace-pre-wrap break-words">
                                    @msg.ThinkingContent
                                </div>
                            </details>
                        }

                        <div class="whitespace-pre-wrap break-words text-sm sm:text-base">
                            @msg.Content
                            @if (msg.IsStreaming)
                            {
                                <span class="inline-block w-2 h-4 bg-amber-600 ml-1 cursor-blink"></span>
                            }
                        </div>
                    </div>
                </div>
            }

            @if (_isLoading && !_messages.Any(m => m.IsStreaming))
            {
                <div class="flex justify-start">
                    <div class="bg-white border border-amber-200 rounded-2xl rounded-bl-md px-3 sm:px-4 py-2 sm:py-3 shadow-sm">
                        <div class="flex items-center gap-2 text-amber-700 text-sm">
                            <span class="thinking-pulse">思考中...</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </main>

    <footer class="flex-shrink-0 bg-white border-t border-amber-200 px-3 sm:px-4 py-3 sm:py-4 safe-area-bottom">
        <div class="max-w-4xl mx-auto">
            <form @onsubmit="SendMessage" class="flex gap-2 sm:gap-3">
                <input @bind="_inputMessage" 
                       @bind:event="oninput"
                       @onkeydown="HandleKeyDown"
                       type="text"
                       inputmode="text"
                       autocomplete="off"
                       autocorrect="off"
                       autocapitalize="off"
                       spellcheck="false"
                       enterkeyhint="send"
                       placeholder="输入消息..."
                       disabled="@_isLoading"
                       class="flex-1 min-w-0 bg-amber-50 border border-amber-300 rounded-xl px-3 sm:px-4 py-2.5 sm:py-3 text-base text-gray-800 placeholder-amber-400 focus:outline-none focus:ring-2 focus:ring-amber-400 focus:border-amber-400 transition-all disabled:opacity-50" />
                <button type="submit" 
                        disabled="@(string.IsNullOrWhiteSpace(_inputMessage) || _isLoading)"
                        class="flex-shrink-0 px-4 sm:px-6 py-2.5 sm:py-3 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-medium rounded-xl hover:from-amber-600 hover:to-orange-600 active:from-amber-700 active:to-orange-700 focus:outline-none focus:ring-2 focus:ring-amber-400 transition-all disabled:opacity-50 disabled:cursor-not-allowed text-sm sm:text-base">
                    发送
                </button>
            </form>
        </div>
    </footer>
</div>

@* 自定义提示词对话框 *@
@if (_showCustomDialog)
{
    <div class="fixed inset-0 bg-black/50 flex items-end sm:items-center justify-center z-50 p-0 sm:p-4" @onclick="CloseCustomDialog">
        <div class="bg-white rounded-t-2xl sm:rounded-2xl shadow-2xl w-full sm:max-w-lg max-h-[80vh] flex flex-col safe-area-bottom" @onclick:stopPropagation>
            <div class="px-4 sm:px-6 py-4 border-b border-amber-200 flex-shrink-0">
                <h2 class="text-lg font-bold text-gray-800">自定义系统提示词</h2>
            </div>
            <div class="p-4 sm:p-6 flex-1 overflow-auto">
                <textarea @bind="_customPromptInput"
                          rows="6"
                          inputmode="text"
                          placeholder="输入自定义的 AI 人设提示词..."
                          class="w-full bg-amber-50 border border-amber-300 rounded-xl px-3 sm:px-4 py-3 text-base text-gray-800 placeholder-amber-400 focus:outline-none focus:ring-2 focus:ring-amber-400 resize-none"></textarea>
                <p class="mt-2 text-xs text-gray-500">提示词将定义 AI 的行为和回复风格。切换后对话会被清空。</p>
            </div>
            <div class="px-4 sm:px-6 py-4 border-t border-amber-200 flex justify-end gap-3 flex-shrink-0">
                <button @onclick="CloseCustomDialog"
                        class="px-4 py-2 text-gray-600 hover:bg-gray-100 active:bg-gray-200 rounded-lg transition-colors">
                    取消
                </button>
                <button @onclick="ApplyCustomPrompt"
                        disabled="@string.IsNullOrWhiteSpace(_customPromptInput)"
                        class="px-4 py-2 bg-gradient-to-r from-amber-500 to-orange-500 text-white font-medium rounded-lg hover:from-amber-600 hover:to-orange-600 active:from-amber-700 active:to-orange-700 transition-all disabled:opacity-50">
                    应用
                </button>
            </div>
        </div>
    </div>
}

<style>
    /* iOS Safe Area */
    .safe-area-top {
        padding-top: max(env(safe-area-inset-top), 0.75rem);
    }
    .safe-area-bottom {
        padding-bottom: max(env(safe-area-inset-bottom), 0.75rem);
    }
    
    /* 使用 dvh 提供更好的移动端支持 */
    .h-dvh {
        height: 100dvh;
    }
    
    /* 光标闪烁动画 */
    .cursor-blink {
        animation: blink 1s step-end infinite;
    }
    
    @@keyframes blink {
        0%, 100% { opacity: 1; }
        50% { opacity: 0; }
    }
    
    /* 思考动画 */
    .thinking-pulse {
        animation: pulse 1.5s ease-in-out infinite;
    }
    
    @@keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }
    
    /* 移动端输入框优化 */
    @@media (max-width: 640px) {
        input, textarea {
            font-size: 16px !important; /* 防止 iOS 自动缩放 */
        }
    }
</style>

@code {
    private readonly List<ChatMessage> _messages = [];
    private string _inputMessage = string.Empty;
    private bool _isLoading;
    private string? _trimNotification;
    private bool _previousHasSummary;
    
    // 预设菜单和自定义对话框状态
    private bool _showPresetMenu;
    private bool _showCustomDialog;
    private string _customPromptInput = "";

    private async Task SendMessage()
    {
        if (string.IsNullOrWhiteSpace(_inputMessage) || _isLoading) return;

        var userMessage = _inputMessage.Trim();
        _inputMessage = string.Empty;
        _isLoading = true;
        _previousHasSummary = Gemini.HasSummary;

        _messages.Add(new ChatMessage { IsUser = true, Content = userMessage });
        await ScrollToBottom();
        StateHasChanged();

        var aiMessage = new ChatMessage { IsUser = false, Content = "", IsStreaming = true };
        _messages.Add(aiMessage);

        try
        {
            var thinkingBuilder = new System.Text.StringBuilder();
            var responseBuilder = new System.Text.StringBuilder();

            await foreach (var chunk in Gemini.StreamChatAsync(userMessage))
            {
                if (chunk.IsThinking)
                {
                    thinkingBuilder.Append(chunk.Text);
                    aiMessage.ThinkingContent = thinkingBuilder.ToString();
                }
                else
                {
                    responseBuilder.Append(chunk.Text);
                    aiMessage.Content = responseBuilder.ToString();
                }
                
                StateHasChanged();
                await ScrollToBottom();
            }

            // 检查是否触发了历史修剪
            if (!_previousHasSummary && Gemini.HasSummary)
            {
                _trimNotification = "对话历史已自动摘要压缩，以保持最佳性能。";
            }
        }
        catch (Exception ex)
        {
            aiMessage.Content = $"错误: {ex.Message}";
        }
        finally
        {
            aiMessage.IsStreaming = false;
            _isLoading = false;
            StateHasChanged();
        }
    }

    private void ClearChat()
    {
        _messages.Clear();
        Gemini.ClearHistory();
        _trimNotification = null;
    }

    private async Task HandleKeyDown(KeyboardEventArgs e)
    {
        // 移动端 Enter 键发送（非组合键）
        if (e.Key == "Enter" && !e.ShiftKey && !e.CtrlKey && !e.AltKey)
        {
            await SendMessage();
        }
    }

    private async Task ScrollToBottom()
    {
        await JS.InvokeVoidAsync("eval", "document.getElementById('messages-container').scrollTop = document.getElementById('messages-container').scrollHeight");
    }

    private static string FormatTokenCount(int count)
    {
        return count >= 1000 ? $"{count / 1000}K" : count.ToString();
    }

    // 预设菜单相关方法
    private void TogglePresetMenu()
    {
        _showPresetMenu = !_showPresetMenu;
    }

    private void CloseMenus()
    {
        _showPresetMenu = false;
    }

    private void SelectPreset(string presetId)
    {
        Gemini.SetSystemPrompt(presetId);
        _messages.Clear();
        _showPresetMenu = false;
        _trimNotification = null;
    }

    private void ShowCustomPromptDialog()
    {
        _showPresetMenu = false;
        _showCustomDialog = true;
        // 回填之前输入的自定义提示词
        _customPromptInput = Gemini.CurrentCustomPrompt;
    }

    private void CloseCustomDialog()
    {
        _showCustomDialog = false;
    }

    private void ApplyCustomPrompt()
    {
        if (!string.IsNullOrWhiteSpace(_customPromptInput))
        {
            Gemini.SetSystemPrompt("custom", _customPromptInput);
            _messages.Clear();
            _showCustomDialog = false;
            _trimNotification = null;
        }
    }

    private string GetCurrentPresetName()
    {
        var preset = GeminiService.Presets.FirstOrDefault(p => p.Id == Gemini.CurrentPresetId);
        return preset?.Name ?? "默认助手";
    }

    private class ChatMessage
    {
        public bool IsUser { get; init; }
        public string Content { get; set; } = "";
        public string? ThinkingContent { get; set; }
        public bool IsStreaming { get; set; }
    }
}
