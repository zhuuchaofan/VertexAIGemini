@page "/login"
@rendermode InteractiveServer
@inject AuthService Auth
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-sky-100 via-white to-emerald-100 px-4">
    <div class="w-full max-w-md">
        <div class="bg-white/80 backdrop-blur-xl rounded-3xl shadow-2xl p-6 sm:p-8 border border-white/50">
            <div class="text-center mb-8">
                <h1 class="text-3xl font-bold bg-gradient-to-r from-sky-500 to-emerald-500 bg-clip-text text-transparent">Gemini Chat</h1>
                <p class="text-slate-500 mt-2">@(_isLogin ? "登录您的账户" : "创建新账户")</p>
            </div>

            @if (!string.IsNullOrEmpty(_error))
            {
                <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-2xl text-red-700 text-sm">
                    @_error
                </div>
            }

            @if (!string.IsNullOrEmpty(_success))
            {
                <div class="mb-4 p-3 bg-emerald-50 border border-emerald-200 rounded-2xl text-emerald-700 text-sm">
                    @_success
                </div>
            }

            <form @onsubmit="HandleSubmit" class="space-y-5">
                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">邮箱</label>
                    <input type="email"
                           @bind="_email"
                           required
                           placeholder="your@email.com"
                           class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-sky-300 focus:border-sky-300 text-slate-700 transition-all" />
                </div>

                <div>
                    <label class="block text-sm font-medium text-slate-700 mb-1.5">密码</label>
                    <input type="password"
                           @bind="_password"
                           required
                           minlength="6"
                           placeholder="至少 6 个字符"
                           class="w-full px-4 py-3 bg-slate-50 border border-slate-200 rounded-2xl focus:outline-none focus:ring-2 focus:ring-sky-300 focus:border-sky-300 text-slate-700 transition-all" />
                </div>

                <button type="submit"
                        disabled="@_isLoading"
                        class="w-full py-3.5 bg-gradient-to-r from-sky-400 to-emerald-400 text-white font-bold rounded-2xl hover:shadow-lg hover:shadow-sky-200/50 hover:scale-[1.02] active:scale-[0.98] transition-all disabled:opacity-50 disabled:cursor-not-allowed shadow-md">
                    @if (_isLoading)
                    {
                        <span>处理中...</span>
                    }
                    else
                    {
                        <span>@(_isLogin ? "登录" : "注册")</span>
                    }
                </button>
            </form>

            <div class="mt-6 text-center">
                <button @onclick="ToggleMode"
                        class="text-sky-600 hover:text-sky-700 text-sm font-medium transition-colors">
                    @(_isLogin ? "没有账户？立即注册" : "已有账户？立即登录")
                </button>
            </div>
        </div>

        <p class="mt-6 text-center text-slate-400 text-sm">
            基于 Vertex AI Gemini 构建
        </p>
    </div>
</div>

@code {
    private string _email = "";
    private string _password = "";
    private bool _isLogin = true;
    private bool _isLoading;
    private string? _error;
    private string? _success;

    protected override async Task OnInitializedAsync()
    {
        await Auth.InitializeAsync();

        // 如果已登录，跳转到聊天页面
        if (Auth.IsAuthenticated)
        {
            Navigation.NavigateTo("/");
        }
    }

    private async Task HandleSubmit()
    {
        _error = null;
        _success = null;

        // 客户端验证
        if (string.IsNullOrWhiteSpace(_email) || string.IsNullOrWhiteSpace(_password))
        {
            _error = "邮箱和密码不能为空";
            return;
        }

        // 邮箱格式验证
        if (!System.Text.RegularExpressions.Regex.IsMatch(_email.Trim(),
            @"^[^@\s]+@[^@\s]+\.[^@\s]+$"))
        {
            _error = "请输入有效的邮箱地址";
            return;
        }

        // 密码长度验证
        if (_password.Length < 6)
        {
            _error = "密码长度至少需要 6 个字符";
            return;
        }

        if (_password.Length > 100)
        {
            _error = "密码长度不能超过 100 个字符";
            return;
        }

        _isLoading = true;
        StateHasChanged();

        try
        {
            var endpoint = _isLogin ? "/api/auth/login" : "/api/auth/register";

            // 使用 JS fetch 让浏览器处理 Cookie（Blazor Server 的 HttpClient 在服务器端运行，无法设置浏览器 Cookie）
            var result = await JS.InvokeAsync<AuthResult>("window.authFetch", endpoint, _email, _password);

            if (result.Success)
            {
                // 刷新页面以建立新的 SignalR 连接（带 Cookie）
                Navigation.NavigateTo("/", forceLoad: true);
            }
            else
            {
                _error = result.Error ?? "操作失败";
            }
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private void ToggleMode()
    {
        _isLogin = !_isLogin;
        _error = null;
        _success = null;
    }

    // DTO for JS interop result
    private record AuthResult(bool Success, string? Error);
}
